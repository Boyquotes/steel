use steel::*;

use crate::prelude::*;

/// Builds a hello instruction.
pub fn hello(signer: Pubkey, value: u64) -> Instruction {
    Instruction {
        program_id: crate::ID,
        accounts: vec![AccountMeta::new(signer, true)],
        data: Hello { value: value.to_le_bytes() }.to_bytes()
    }
}

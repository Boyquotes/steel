mod user;

pub use user::*;

use steel::*;

use crate::consts::*;

#[repr(u8)]
#[derive(Clone, Copy, Debug, Eq, PartialEq, IntoPrimitive, TryFromPrimitive)]
pub enum {name_typecase}Account {
    User = 0
}

/// Fetch PDA of a user account.
pub fn user_pda(id: u64) -> (Pubkey, u8) {
    Pubkey::find_program_address(&[USER, id.to_le_bytes().as_slice()], &crate::id())            
}
